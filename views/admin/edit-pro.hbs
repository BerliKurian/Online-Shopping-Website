<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
  <link href="/stylesheets/style2.css" rel="stylesheet" type="text/css">
</head>
<body>
  <div class="container">
    <h2>Add Product</h2>
    <form action="/admin/edit-pro/{{product._id}}" method="post" enctype="multipart/form-data">

      <label for="id">ID:</label>
      <input type="text" id="id" name="id" required value="{{product.id}}">

      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required value="{{product.description}}">

      <label for="category">Category:</label>
      <select id="category" name="category" required>
        <option value="">Select Category</option>
        <option value="Kurti" {{#if (eq product.category 'Kurti')}}selected{{/if}}>Kurti</option>
        <option value="Salwar" {{#if (eq product.category 'Salwar')}}selected{{/if}}>Salwar</option>
        <option value="Party Wear" {{#if (eq product.category 'Party Wear')}}selected{{/if}}>Party Wear</option>
        <option value="Saree" {{#if (eq product.category 'Saree')}}selected{{/if}}>Saree</option>
        <option value="Top" {{#if (eq product.category 'Top')}}selected{{/if}}>Top</option>
        <option value="Jeans" {{#if (eq product.category 'Jeans')}}selected{{/if}}>Jeans</option>
        
      </select>

      <label for="price">Price:</label>
      <input type="number" id="price" name="price" min="100" step="10" required value="{{product.price}}">

      <label for="image">Image File:</label>
      <img src="/newimages/{{product._id}}.jpg" alt="" width="80px" height="80px" id="imgView" > 
      <input type="file" id="image" name="image" accept="image/*" onchange="viewimage(event)" ><br>

      <input type="submit" value="Submit" style="margin-top:30px;margin-left:190px" >
      
    </form>
  </div>
</body>
</html>

<script>
  function viewimage(event)
  {
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    
  }
</script>